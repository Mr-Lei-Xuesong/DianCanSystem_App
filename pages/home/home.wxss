.serch {
  width: 100%;
  height: 330rpx;
  background-color: #62DBBE;
}
.serch > .serch-top {
  width: 100%;
  height: 27%;
}
.serch-top > .top-left {
  height: 100%;
  width: 20%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  font-size: 33rpx;
  position: relative;
  float: left;
  margin-left: 20rpx;
}
.top-left > image {
  width: 45rpx;
  height: 45rpx;
  position: absolute;
  left: 60rpx;
  top: 13rpx;
}
.top-left > .texttow {
  font-size: 26rpx;
  color: rgb(85, 82, 82);
}
.serch-top > .top-mid {
    height: 100%;
    width: 60%;
    float: left;
    position: relative;
    margin-top: 15rpx;
}
.top-mid > image {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 11rpx;
  left: 10rpx;
}
.top-mid > .inp {
  width: 80%;
  height: 80%;
  border-radius: 30rpx;
  background-color: white;
  padding-left: 70rpx;
}
.serch-top > .top-right {
  width: 15%;
  height: 100%;
  float: left;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 10rpx;
}
.top-right > image {
  width: 65%;
  height: 65%;
}

.serch > .tuijian {
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: space-around;
  align-items: flex-start;
  font-size: 30rpx;
  color: rgb(85, 82, 82);
}
/* 点餐按钮 */
.btn-bar {
  width: 100%;
  height: 150rpx;
  display: flex;
  justify-content: space-around;
}
.btn-bar > .btn-block {
  width: 25%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.btn-block > image {
  width: 50%;
  height: 50%;
}


swiper {
  width: 95%;
  height: 250rpx;
  margin: 30rpx auto;
}
swiper-item {
  width: 100%;
  border-radius: 50rpx;
}
swiper-item > view {
  width: 100%;
}
swiper-item > view > image {
  width: 100%;
  height:350rpx;
}

/* 商家信息 */
.shangjia {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}
.shangjia > .shangjia-item {
  width: 45%;
  height: 500rpx;
  border-radius: 20rpx;
  margin-top: 50rpx;
  background-color: #ebf2f2;
}
.shangjia-item > .a {
  width: 100%;
  height: 250rpx;
}
.a > image {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}
.shangjia-item  > .b {
  font-size: 36rpx;
  padding-left: 10rpx;
  padding-top: 10rpx;
}
.shangjia-item  > .c {
  padding-left: 10rpx;
  padding-top: 10rpx;
  color: #3c3f3f;
  font-size: 28rpx;
}
.c > .c-item {
  color: rgb(211, 40, 40);
  margin-right: 10rpx;
}
.shangjia-item > .d {
  padding-left: 10rpx;
  padding-top: 10rpx;
}
.d > .d-item {
  background-color: rgb(228, 203, 203);
  margin-right: 10rpx;
  border-radius: 10rpx;
  color: rgb(202, 59, 59);
  padding: 2rpx;
}
.shangjia-item > .e {
  padding-left: 10rpx;
  padding-top: 35rpx;
  font-size: 30rpx;
  color: #3c3f3f;
}
.hidden {
  position: absolute;
  right: 5rpx;
  top: 90rpx;
  width: 130rpx;
  height: 200rpx;
  background-color: rgb(255, 255, 255);
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  font-size: 28rpx;
  /* display: none; */
}
