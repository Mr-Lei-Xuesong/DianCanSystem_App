.box {
  width: 90%;
  height: 350rpx;
  margin: 100rpx auto;
  border-radius: 20rpx;
  padding: 10rpx;
  background-color: white;
  box-shadow: 0px 0px 8px #b3b2b2 ;
}
.box-top {
  width: 100%;
  height: 25%;
  display: flex;
  align-items: center;
}
.box-top > image:first-child {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}
.box-top > image:last-child {
  width: 40rpx;
  height: 40rpx;
}
.box-top > text {
  font-size: 37rpx;
  margin-right: 10rpx;
}
.box-mid {
  width: 100%;
  height: 50%;
  display: flex;
}
.mid-left {
  width: 25%;
  height: 80%;
}
.mid-left > image {
  width: 100%;
  height: 100%;
}
.mid-right {
  width: 65%;
  height: 100%;
  padding: 15rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  color: rgb(136, 131, 131)23, 218, 218;
}
.right-a {
  margin-bottom: 15rpx;
}
.box-bottom {
  width: 30%;
  height: 20%;
  margin-top: 0rpx;
  display: flex;
  justify-content: right;
  padding-left: 500rpx;
}
.box-bottom > text {
  width: 80%;
  height: 100%;
  background-color: white;
  border: 1rpx solid #b3b2b2 ;
  float: right;
  border-radius: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color:#6a6969;
}

.huanying {
  width: 100%;
  height: 600rpx;
  margin-top: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.huanying > image {
  width: 100%;
  height: 80%;
}
.huanying > text {
  font-size: 46rpx;
  margin-top: 50rpx;
}