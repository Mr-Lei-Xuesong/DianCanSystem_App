/* pages/user/user.wxss */
.top {
  height: 350rpx;
  background-color: #62DBBE;
}

.top >image {
  width: 800rpx;
  height: 350rpx;
  position: absolute;
}

.top > .mid {
  width: 600rpx;
  height: 300rpx;
  position: absolute;
  top: 25rpx;
  left: 80rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-direction: column
}
.top > .mid >image{
  height:180rpx;
  width: 180rpx; 
  border-radius: 100rpx;
  border: solid 1rpx rgba(0, 0, 0, 0.5);
  

}
.top > .mid >text{
color: #fff;
}

.max {
  position: absolute;
  background-color: #ececec;
  width: 100%;
  height: 1200rpx;
}

.all {
  position: absolute;
  top: 50rpx;
  left: 80rpx;
  width: 80%;
  height: 500rpx;
}

.all > .content {
  background-color: #fff;
  margin: auto;
  border-radius: 20rpx;
  border: solid rgba(0, 0, 0, 0.1);
  width: 100%;
  height: 120rpx;
}

.max > .all >.content > text {
  font-family: '微软雅黑';
  padding-left: 40rpx;
  font-size: 45rpx;
}

.max > .all > .content > image {
  width: 60rpx;
  height: 60rpx;
 margin-top: 20rpx;
 margin-left:10rpx;  
 align-items: center;
 
}
.back-white {
  background: #fff;
}