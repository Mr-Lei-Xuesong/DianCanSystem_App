.box {
  width: 100%;
  height: 100rpx;
  display: flex;
}
.box > .box-left {
  width: 15%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.box-left > image {
  width: 50%;
  height: 50%;
}
.box > .box-mid {
  width: 70%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.box-mid > input {
  background-color: rgba(233, 230, 230, 0.885);
  border-radius: 30rpx;
  width: 90%;
  height: 80%;
  padding-left: 30rpx;
}
.box > .box-right {
  width: 15%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 36rpx; 
}
.mid {
  width: 100%;
  height: 70rpx;
  display: flex;
  justify-content: space-around;
  color: rgba(91, 86, 86, 0.816);
  font-size: 26rpx;
}
.mid > .mid-left {
  width: 50%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
}
.mid > .btn {
  width: 60%;
  height: 80%;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 10rpx;
  font-size: 22rpx;
  color: rgba(91, 86, 86, 0.816);
}
.mid > .mid-img {
  position: absolute;
  left: 350rpx;
  top: 115rpx;
  width: 50rpx;
  height: 50rpx;
  z-index: 9;
}
.mid > .mid-img-tow {
  position: absolute;
  right: 10rpx;
  top: 115rpx;
  width: 80rpx;
  height: 50rpx;
}
.hot {
  width: 100%;
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  margin-top: 50rpx;
}
.hot > .btn {
  width: 40%;
  font-size: 28rpx;
  color: rgba(91, 86, 86, 0.816);
  margin-top: 20rpx;
}

.bottom {
  width: 100%;
  height: 500rpx;
  margin: auto;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 30rpx;
}
.bottom > image {
  width: 70%;
  height: 70%;
  border-radius: 20rpx;
}
.bot {
  width: 100%;
  height: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}
.bot > image {
  width: 80rpx;
  height: 80rpx;
}

